<%- include('header'); -%>

    <div class="container">
      <div class="listings">
        <ul class="list-unstyled">
          <!-- Create an <li> element for each user in users (modulo symbol tag for each line not code block)-->
          <% for (let i = 0; i < listings.length; i++) { %>
          <a href="/sighting/<%= i %>"><li>Sighting <%= i %></li></a>
          <form action="/sighting/<%= i %>/delete?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
          </form>

          <form method="get" action="/sighting/<%= i %>/edit">
            <input type="submit" value="Edit" />
          </form>
          <% } %>
        </ul>
      </div>
      <div class="visitor">
        <p>Total aliens: <%= visitCounter %></p>
      </div>
    </div>
  </body>
</html>
<%- include('footer'); -%>
